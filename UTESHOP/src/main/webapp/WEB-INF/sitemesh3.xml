<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- Decorator cho admin -->
    <mapping path="/api/admin/*" decorator="/admin.jsp" />
    
    <!-- Decorator cho shipper -->
    <mapping path="/api/shipper*" decorator="/shipper.jsp" />

    <!-- Decorator cho user -->
    <mapping path="/home/user*" decorator="/user.jsp" />

    <!-- Decorator mặc định cho web -->
    <mapping path="/*" decorator="/web.jsp" />

    <!-- Exclude auth pages -->
    <mapping path="/auth/logout" exclude="true" />

    <!-- Exclude static files -->
    <mapping path="*.css" exclude="true" />
    <mapping path="*.js" exclude="true" />
    <mapping path="*.png" exclude="true" />
    <mapping path="*.jpg" exclude="true" />
    <mapping path="*.jpeg" exclude="true" />
    <mapping path="*.gif" exclude="true" />
    <mapping path="*.ico" exclude="true" />
    <mapping path="/assets/*" exclude="true" />
    <mapping path="/images/*" exclude="true" />
    <mapping path="/templates/*" exclude="true" />
</sitemesh>
