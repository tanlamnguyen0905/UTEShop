<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="UTESHOP" transaction-type="RESOURCE_LOCAL">

        <!-- Thêm tất cả các entity classes từ project structure của bạn -->
        <class>ute.entities.Categories</class>
        <class>ute.entities.Users</class>
        <class>ute.entities.Addresses</class>
        <class>ute.entities.Brand</class>
        <class>ute.entities.Cart</class>
        <class>ute.entities.Banner</class>
        <class>ute.entities.CartDetail</class>
        <class>ute.entities.Image</class>
        <class>ute.entities.Orders</class>
        <class>ute.entities.OrderDetail</class>
        <class>ute.entities.PaymentMethod</class>
        <class>ute.entities.Product</class>
        <class>ute.entities.ProductDiscount</class>
        <class>ute.entities.Review</class>
        <class>ute.entities.UserCoupon</class>

        <properties>
            <!-- JDBC config cho SQL Server -->
            <property name="jakarta.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=UTESHOP_1;encrypt=false;trustServerCertificate=true"/>

            <!-- Hibernate config -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Tùy: Tắt batch insert nếu gặp lỗi với SQL Server -->
            <property name="hibernate.jdbc.batch_size" value="0"/>
        </properties>
    </persistence-unit>
</persistence>